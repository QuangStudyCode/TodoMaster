<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:padding="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtCustomAlert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tap to Type" >
            <requestFocus/>
        </EditText>

        <LinearLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:gravity="end">

            <Button
                android:background="@drawable/custom_button_alertdialog"
                android:id="@+id/btnCustomAlertCanel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel" />

            <Button
                android:textColor="@color/white"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:background="@drawable/custom_button_save_dialog"
                android:id="@+id/btnCustomAlertSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save" />
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>