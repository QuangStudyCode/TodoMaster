<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_background"
    tools:context=".SplashActivity">



    <ImageView
        android:id="@+id/imgSplash"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_210sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_55sdp"
        android:src="@drawable/boy" />
    =

    <TextView
        android:id="@+id/tvSplash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgSplash"
        android:gravity="center_horizontal"
        android:text="@string/welcome"
        android:textColor="@color/white"
        android:textSize="@dimen/_35ssp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvSplash1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSplash"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center_horizontal"
        android:text="Unlock Your Time Potential with Our Powerful Todo App!"
        android:textColor="@color/white"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tvSplash2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSplash1"
        android:layout_marginTop="@dimen/_18sdp"
        android:gravity="center_horizontal"
        android:text="We're here to help you unlock your time potential and achieve your goals. Start managing your time effectively with our powerful tasks management app today!"
        android:textColor="@color/white"
        android:textSize="@dimen/_10ssp"
        android:textStyle="normal" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnStartSplash"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_below="@id/tvSplash1"
        android:layout_marginStart="@dimen/_75sdp"
        android:layout_marginTop="@dimen/_105sdp"
        android:layout_marginEnd="@dimen/_75sdp"
        android:background="@drawable/custom_button_start"
        android:text="Start Now"
        android:textColor="@color/white"
        android:textSize="@dimen/_13ssp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLoginSplash"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_below="@id/btnStartSplash"
        android:layout_marginStart="@dimen/_75sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_75sdp"
        android:background="@drawable/custom_btn_login_splash"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="@dimen/_13ssp"
        android:textStyle="bold" />

</RelativeLayout>