<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_alert_feedback"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFEB3B"
        android:padding="@dimen/_10sdp"
        android:text="Send your Feedback"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_13ssp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_10sdp"
        android:padding="@dimen/_5sdp"
        android:text="Please send us your Feedback"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_13ssp" />

    <EditText

        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginVertical="@dimen/_5sdp"
        android:background="@drawable/custom_edt_feedback"
        android:hint="Feedback"
        android:paddingHorizontal="@dimen/_5sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:gravity="center_horizontal"
        android:paddingVertical="@dimen/_10sdp">

        <Button
            android:id="@+id/btnCanelSendFeedBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_weight=".5"
            android:background="@drawable/custom_btn_cancel_feedback"
            android:text="Cancel"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnSendFeedBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_weight=".5"
            android:background="@drawable/custom_btn_send_feedback"
            android:text="Send" />
    </LinearLayout>


</LinearLayout>